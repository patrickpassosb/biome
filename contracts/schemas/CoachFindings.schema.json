{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CoachFindings",
    "type": "object",
    "properties": {
        "findings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "weak_point",
                            "progress",
                            "consistency",
                            "volume_alert",
                            "technique_note"
                        ]
                    },
                    "message": {
                        "type": "string",
                        "description": "Human-readable insight message"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "info",
                            "warning",
                            "critical"
                        ]
                    },
                    "related_metric": {
                        "type": "string",
                        "description": "Key of the metric this finding relates to (from metrics.md)",
                        "enum": [
                            "volume_load",
                            "average_rpe",
                            "max_weight",
                            "weekly_frequency",
                            "set_count",
                            "failure_rate"
                        ]
                    },
                    "related_exercise": {
                        "type": "string",
                        "description": "Optional specific exercise name"
                    }
                },
                "required": [
                    "type",
                    "message",
                    "severity"
                ]
            }
        }
    },
    "required": [
        "findings"
    ]
}