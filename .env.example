# .env.example - copy to .env and fill values

# Google Gemini / AI API key (used by the agent)
GOOGLE_API_KEY=your-gemini-api-key

# Path to Google service account JSON for Firestore access (optional)
# Either set this or GCLOUD_PROJECT to enable Firestore usage
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json
GCLOUD_PROJECT=your-gcloud-project-id

# Local DuckDB path for analytics storage
DUCKDB_PATH=./data/biome.duckdb

# App / runtime settings
PORT=8080
ENV=development
LOG_LEVEL=info

# Optional: Firestore emulator host for local development (host:port)
# Set this to use the emulator instead of real Firestore
FIRESTORE_EMULATOR_HOST=localhost:8081
